import turtle

win = turtle.Screen()
win.screensize(1300,400)
win.bgcolor ("Dark Red")
t = turtle.Turtle()

t.width(5)
n = 3
a = 360/n
for i in range (n):
    t.forward (100)
    t.left(a)
t.penup ()
t.left (90)
t.forward (65)
t.right (90)
t.pendown ()
    
n = 3
a = 360/n
for i in range (n):
    t.forward (100)
    t.right(a)   
    
    
    
    
turtle.done()